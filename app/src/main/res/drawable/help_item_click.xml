<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--点击时候-->
    <item android:state_pressed="true"  >

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <solid android:color="#ffCCFF" />   
                <corners android:topLeftRadius="20dp"
            android:topRightRadius="20dp"
            android:bottomRightRadius="20dp"
            android:bottomLeftRadius="20dp"/>
                <stroke android:width="1dp" android:color="#f000f2" />
        </shape>
    </item>
    <!--默认-->
    <item>



        <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <solid android:color="#99CCFF" />   
                <corners android:topLeftRadius="20dp"
            android:topRightRadius="20dp"
            android:bottomRightRadius="20dp"
            android:bottomLeftRadius="20dp"/>
                <stroke android:width="1dp" android:color="#0000f2" />
        </shape>
    </item> 

    <!--选中的时候--> 
    <item android:state_focused="true" android:state_selected="true" android:state_window_focused="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <solid android:color="#9a1CFF" />   
                <corners android:topLeftRadius="20dp"
            android:topRightRadius="20dp"
            android:bottomRightRadius="20dp"
            android:bottomLeftRadius="20dp"/>
                <stroke android:width="1dp" android:color="#5a55f2" />
        </shape>
    </item> 
        
</selector>

